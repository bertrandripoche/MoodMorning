<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/activity_main_mood"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffb8e986"
        android:padding="30dp"
        android:src="@drawable/smileyhappy" />

    <Button
        android:id="@+id/activity_main_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:background="@drawable/ic_history_black"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/activity_main_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_note_add_black"
        android:layout_gravity="bottom|right"
        android:layout_margin="20dp"/>

</FrameLayout>
