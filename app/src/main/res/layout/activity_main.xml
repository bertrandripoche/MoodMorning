<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/activity_main_mood"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff9ec4f"
        android:padding="50dp"
        android:src="@drawable/smileyhappy"/>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/activity_main_comment_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:background="#00000000"
        android:layout_margin="30dp"
        android:src="@drawable/ic_note_add_black"/>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/activity_main_stats_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:background="#00000000"
        android:layout_margin="30dp"
        android:src="@drawable/ic_stats_black"/>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/activity_main_history_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:background="#00000000"
        android:layout_margin="30dp"
        android:src="@drawable/ic_history_black"/>

</FrameLayout>
